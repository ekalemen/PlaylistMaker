<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">0dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "cornerRadius">@dimen/main_button_radius</item>
        <item name = "android:backgroundTint">@color/white</item>
        <item name = "android:textSize">@dimen/main_text_size</item>
        <item name = "android:textColor">@color/main_black</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:fontFamily">@font/ys_display_medium</item>
        <item name = "android:textFontWeight">500</item>
        <item name = "iconTint">@color/main_black</item>
        <item name = "iconSize">@dimen/main_button_icon_size</item>
        <item name = "iconGravity">textStart</item>
    </style>
    <style name="MainTextViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">@dimen/main_text_size</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:fontFamily">@font/ys_display_medium</item>
        <item name = "android:textFontWeight">500</item>
        <item name = "android:paddingTop">14dp</item>
    </style>
    <style name="MainLinLayoutStyle">
        <item name = "android:layout_width">match_parent</item>"
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:orientation">vertical</item>
        <item name = "android:background">@color/main_black</item>
        <item name = "android:paddingStart">16dp</item>
        <item name = "android:paddingEnd">16dp</item>
        <item name = "android:paddingBottom">28dp</item>
    </style>
    <style name="SettingsItemTextViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">@dimen/settings_item_height</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">@dimen/settings_item_text_size</item>
        <item name = "android:fontFamily">@font/ys_display_regular</item>
        <item name = "android:textFontWeight">400</item>
        <item name = "android:layout_marginStart">@dimen/settings_item_margin</item>
    </style>
    <style name="SettingsItemImageViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">@dimen/settings_item_height</item>
        <item name = "android:layout_gravity">end</item>
        <item name = "tint">@color/white</item>
    </style>
    <style name="SettingsTopHeaderTextView">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">48dp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">@dimen/settings_text_size</item>
        <item name = "android:layout_marginStart">24dp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:fontFamily">@font/ys_display_medium</item>
        <item name = "android:textFontWeight">500</item>
    </style>
    <style name="SettingsTopHeaderImageView">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:backgroundTint">@color/main_black</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "tint">@color/white</item>
        <item name = "android:layout_marginTop">16dp</item>
        <item name = "android:layout_marginLeft">4dp</item>
    </style>
    <style name="SettingsLinLayoutStyle">
        <item name = "android:layout_width">match_parent</item>"
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:orientation">vertical</item>
        <item name = "android:paddingRight">12dp</item>
        <item name = "android:background">@color/main_black</item>
    </style>
    <style name="SettingsThemeSwitchStyle">
        <item name = "android:thumbTint">@color/settings_knob_blue</item>
        <item name = "android:trackTint">@color/settings_sw_track_light_blue</item>
        <item name = "android:checked">true</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">@dimen/settings_item_height</item>
        <item name = "android:layout_gravity">end</item>
    </style>
    <style name="SearchEditViewStyle">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">36dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:maxLines">1</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textColorHint">@color/black</item>
        <item name = "android:fontFamily">@font/ys_display_regular</item>
        <item name = "android:textFontWeight">400</item>
        <item name = "android:textSize">@dimen/settings_item_text_size</item>
        <item name = "android:paddingStart">8dp</item>
        <item name = "android:paddingEnd">8dp</item>
        <item name = "android:drawablePadding">4dp</item>
        <item name = "android:drawableTint">@color/black</item>
        <item name = "android:background">@drawable/rounded_search_edittext</item>
        <item name = "android:backgroundTint">@color/white</item>
    </style>
</resources>