<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsLinLayoutStyle"
    tools:context=".settings.ui.activity.SettingsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp">

        <ImageView
            style="@style/SettingsTopHeaderImageView"
            android:id="@+id/settings_button_back"
            android:src="@drawable/settings_arrow_back" />

        <TextView
            style="@style/SettingsTopHeaderTextView"
            android:text="@string/button_settings" />
    </LinearLayout>

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsItemTextViewStyle"
            android:text="@string/list_item_theme" />

        <Switch
            style="@style/SettingsThemeSwitchStyle"
            android:id="@+id/theme_switcher"
            android:switchMinWidth="32dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_share_app_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsItemTextViewStyle"
            android:text="@string/list_item_share" />

        <ImageView
            style="@style/SettingsItemImageViewStyle"
            android:src="@drawable/settings_share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_write_to_support_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsItemTextViewStyle"
            android:text="@string/list_item_support" />

        <ImageView
            style="@style/SettingsItemImageViewStyle"
            android:src="@drawable/settings_support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_user_agreement_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsItemTextViewStyle"
            android:text="@string/list_item_license" />

        <ImageView
            style="@style/SettingsItemImageViewStyle"
            android:src="@drawable/settings_list_arrow" />
    </FrameLayout>

</LinearLayout>
